<style>
    ul.pub-list {
      list-style-type: none;
      margin: 0;
      padding: 0;
    }
</style>
<ul class="pub-list list">
<% for (const item of items) { %>
  <li <%= metadataAttrs(item) %>>
    <span class="listing-title lead"><%= item.title %></span><br />
    <span class="listing-author"><%= item.author %></span><br />
    <span class="listing-journal fst-italic"><%= item.journal %>,</span>
    <span class="listing-year"><%=item.year %></span><br />
    <a href="<%- item.paper %>" class="btn btn-outline-primary" target="_blank" rel="noopener noreferrer">
        <i class="bi bi-journal-text"></i> Paper
    </a>
    <% if (item.preprint) { %>
      <a href="<%- item.preprint %>" class="btn btn-secondary" target="_blank" rel="noopener noreferrer">
        <i class="bi bi-file-earmark-text"></i> Preprint
      </a>
    <% } %>
    <% if (item.website) { %>
      <a href="<%- item.website %>" class="btn btn-secondary" target="_blank" rel="noopener noreferrer">
        <i class="bi bi-globe"></i> Website
      </a>
    <% } %>
    <% if (item.materials) { %>
      <a href="<%- item.materials %>" class="btn btn-secondary" target="_blank" rel="noopener noreferrer">
        <i class="bi bi-tools"></i></i> Materials
      </a>
    <% } %>
    <% if (item.code) { %>
      <a href="<%- item.code %>" class="btn btn-secondary" target="_blank" rel="noopener noreferrer">
        <i class="bi bi-code-square"></i> Code
      </a>
    <% } %>
    <% if (item.data) { %>
      <a href="<%- item.data %>" class="btn btn-secondary" target="_blank" rel="noopener noreferrer">
        <i <i class="bi bi-database"></i></i> Data
      </a>
    <% } %>
  </li>
  <br />
<% } %>
</ul>
```